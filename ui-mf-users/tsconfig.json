{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2021"
    ],
    "sourceMap": true,
    "checkJs": false,
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "Node10",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "baseUrl": "./",
    "alwaysStrict": true,
    "noEmitOnError": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "react": [
        "node_modules/@types/react"
      ]
    }
  },
  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "**/declarations.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist",
    "**/src/**/*.js",
    "**/src/**/*.jsx",
    "**/shared-libraries/**/*.*"
  ]
}