{
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2021"
    ],
    "sourceMap": true,
    "checkJs": false,
    "allowJs": false,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "Node10",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "baseUrl": "./",
    "alwaysStrict": true,
    "noEmitOnError": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "declarations.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.jsx"
  ]
}